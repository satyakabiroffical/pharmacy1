                     <td class="align-middle">{{product.productDescription}}</td>
                   </tr>

                    <tr>
                     <th class="align-middle" scope="col-1"></th>
                     <td class="align-middle"><a href="/buy-now"><button class="btn btn-primary">Buy now</button></a></td>
                   </tr>
                  
