</div>

 
  {{>front_footer}}

 
{{>front_script}}
{{!-- counter script start --}}
<script>
  let selectedQuantity = document.getElementById("selectedQuantity");
  let selectedPrice = document.getElementById("selectedPrice");
  let increment = document.getElementById("increment");
  let decrement = document.getElementById("decrement");
  let count = 1
  let availability = "{{product.productQuantity}}"
  let prodcutPrice = "{{product.productPrice}}"

  increment.addEventListener('click', ()=>{
      if(count < availability){
      count++;
      selectedQuantity.innerHTML = count;
      selectedPrice.innerHTML = count * prodcutPrice

      }
  });

  decrement.addEventListener('click', ()=>{
      if(count > 1){
      count--;
      selectedQuantity.innerHTML = count;
      selectedPrice.innerHTML = count * prodcutPrice

      }
  });
</script>
{{!-- couter script ends --}}

