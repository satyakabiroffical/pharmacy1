        src:"../front/assets/img/testimonial/test 1.png",
        name:"Hiroshi Kuniyoshi ‘et al’ (2004)",
        review:"The Role of Industrial Development in the achievement of the Millenium Development Goals‟Compedium Edition of United Nations Industrial Development Organisation (UNIDO)",
    },
    {
        src:"../front/assets/img/testimonial/test 2.png",
        name:"Ahmed, A. ‘et al’ (2005)",
        review:"Entrepreneurship, management, and sustainable development, World Review of Entrepreneurship, Management and Sust. Development, Vol. 1, No. 1,pp.6–30",
    },
    {
        src:"../front/assets/img/testimonial/test 3.png",
        name:"Marc J. Dollinger",
        review:"„Entrepreneurship Strategies and Resources‟, Marsh Publications, Lombard, Illinois U.S.A",
    },
    {
        src:"../front/assets/img/testimonial/test 4.png",
        name:"James Austin ‘et al’ (2006)",
        review:"Effective Management of Social Enterprises‟ by Harvard University Press, Cambridge, Massachusetts, London, England",
    },
    {
        src:"../front/assets/img/testimonial/test 5.png",
        name:"WimNaude (2013)",
        review:"„Entrepreneurship and Economic Development: Theory, Evidence and Policy‟ IZA Discussion Paper No. 7507, P.O. Box 7240, 53072 Bonn, Germany.",
    },
]

let cardImg = document.querySelector('.card-img-top');
let cardHead = document.querySelector('.card-heading');
let cardText = document.querySelector('.card-text');
let testArrow = document.querySelectorAll('.test-arrow');

let testCount = 0;

const checktestCount = () =>{
    if(testCount > testimonial.length -1){
        testCount = 0;
    }
    else if(testCount < 0){
        testCount = testimonial.length -1;
    }
}

const setTestimonial = () =>{
    let item = testimonial[testCount];
    cardImg.src = item.src;
    cardHead.innerHTML = item.name;
    cardText.innerHTML = item.review;
}

const  autosetTestimonial = () => {
    setInterval(()=>{
        testCount++;
        checktestCount();
        setTestimonial();
    }, 3000)
};

autosetTestimonial();

testArrow[0].addEventListener('click', ()=>{
    testCount--;
    checktestCount();
    setTestimonial();
})


testArrow[1].addEventListener('click', ()=>{
    testCount++;
    checktestCount();
    setTestimonial();
})
setTestimonial();
  </script>
