  <!-- Modal -->
  <div class="modal fade " id="myModal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header   d-flex justify-content-evenly" style="background-color:lightslategray; color:white ">
          <h4 class="modal-title">Contact Us</h4>
          <button type="button" class="close text-light" data-dismiss="modal">&times;</button>

        </div>
        <div class="modal-body " style="">
          <form class="contact-form p-4 " action="/usermessage" method="POST">
            <div class="row mb-3">
              <div class="col-sm-6 py-2 wow fadeInLeft " style="background-color:lightslategray ;color:white ">
                <label for="fullName">Name</label>
                <input type="text" id="fullName" name="userName" class="form-control" placeholder="Full name.."
                  required>
              </div>
              <div class="col-sm-6 py-2 wow fadeInRight" style="background-color:lightslategray; color:white ">
                <label for="emailAddress">Email</label>
                <input type="email" id="emailAddress" name="userEmail" class="form-control"
                  placeholder="Email address.." required>
              </div>
              <div class="col-12 py-2 wow fadeInUp" style="background-color:lightslategray; color:white ">
                <label for="subject">Subject</label>
                <input type="text" id="subject" name="userSubject" class="form-control" placeholder="Enter subject.."
                  required>
              </div>
              <div class="col-12 py-2 wow fadeInUp" style="background-color:lightslategray ; color:white">
                <label for="message">Message</label>
                <textarea id="message" name="userMessage" class="form-control" rows="3" placeholder="Enter Message.."
                  required></textarea>
              </div>
            </div>
            <button type="submit" class="btn btn-primary wow zoomIn">Send Message</button>
          </form>
        </div>
        {{!-- <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div> --}}
